<p id="notice"><%= notice %></p>

<h1 class = 'table_name'>Таблица: Выдача</h1>
<div><%= link_to "<button class = 'add_button' type='button'></button>".html_safe, new_delivery_path %></div>

<table class="table_blur">
  <thead>
    <tr>
      <th>Книга</th>
      <th>Абонент</th>
      <th>Дата доставки</th>
      <th>Дата возврата</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.book_id %></td>
        <td><%= delivery.subscriber_id %></td>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.return_date %></td>
        <td><%= link_to 'Посмотреть', delivery %></td>
        <td><%= link_to 'Изменить', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Удалить', delivery, method: :delete,
                        data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
