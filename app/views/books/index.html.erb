<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Library</th>
      <th>Name</th>
      <th>Author</th>
      <th>Cipher</th>
      <th>Publishing house</th>
      <th>Publishing year</th>
      <th>Price</th>
      <th>Receipt date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.library %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.cipher %></td>
        <td><%= book.publishing_house %></td>
        <td><%= book.publishing_year %></td>
        <td><%= book.price %></td>
        <td><%= book.receipt_date %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

