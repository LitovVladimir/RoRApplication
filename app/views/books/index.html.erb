<h1 class = 'table_name'>Таблица: Книга</h1>
<div><%= link_to "<button class = 'add_button' type='button'></button>".html_safe, new_book_path %></div>

<table class="table_blur">
  <thead>
    <tr>
      <th>Библиотека</th>
      <th>Название книги</th>
      <th>Автор</th>
      <th>Шифр</th>
      <th>Издательство</th>
      <th>Год издания</th>
      <th>Цена</th>
      <th>Дата поступления</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.library_id %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.cipher %></td>
        <td><%= book.publishing_house %></td>
        <td><%= book.publishing_year %></td>
        <td><%= book.price %></td>
        <td><%= book.receipt_date %></td>
        <td><%= link_to 'Посмотреть', book %></td>
        <td><%= link_to 'Изменить', edit_book_path(book) %></td>
        <td><%= link_to 'Удалить', book, method: :delete,
                        data: { confirm: "Все записи связанные с данной будут удалены!
         Вы уверены, что хотите удалить запись?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

