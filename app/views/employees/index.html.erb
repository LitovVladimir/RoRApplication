<p id="notice"><%= notice %></p>


<h1 class = 'table_name'>Таблица: Сотрудник</h1>
<div><%= link_to "<button class = 'add_button' type='button'></button>".html_safe, new_employee_path %></div>

<table class="table_blur">
  <thead>
    <tr>
      <th>Библиотека</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Дата рождения</th>
      <th>Дата принятия на работу</th>
      <th>Должность</th>
      <th>Образование</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.library_id %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.first_name %></td>
        <td><%= employee.patronymic %></td>
        <td><%= employee.DOB %></td>
        <td><%= employee.employment_date %></td>
        <td><%= employee.post %></td>
        <td><%= employee.education %></td>
        <td><%= link_to 'Посмотреть', employee %></td>
        <td><%= link_to 'Изменить', edit_employee_path(employee) %></td>
        <td><%= link_to 'Удалить', employee, method: :delete,
                        data: { confirm: 'Вы уверены, что хотите удалить запись?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

