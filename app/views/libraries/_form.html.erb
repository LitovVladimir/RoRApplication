<%= form_for(library) do |f| %>
  <% if library.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
      <% library.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<table class="edit_table">

  <tr>
    <td><%= f.label :'Номер библиотеки' %></td>
    <td><%= f.number_field :number %></td>
  </tr>

  <tr>
    <td><%= f.label :'Название' %></td>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <td><%= f.label :'Адрес' %></td>
    <td><%= f.text_field :address %></td>
  </tr>

</table>

<div class="actions">
  <%= f.submit('Сохранить') %>
</div>

<% end %>